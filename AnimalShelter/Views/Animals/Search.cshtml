@{
  Layout = "_Layout";
}

@using AnimalShelter.Models;
@model AnimalShelter.Models.Animal;

<div class="jumbotron">
  <h2>Search Animals</h2>
</div>

<div class="form">
  @using (Html.BeginForm("SearchResults", "Animals", FormMethod.Post))
  {
    @Html.Label("Search Criteria")
    @Html.TextBoxFor(model => model.Name)
    <br>
    @Html.RadioButtonFor(Model => Model.Type,"AnimalId")
    @Html.Label("By ID")
    <br>
    @Html.RadioButtonFor(Model => Model.Type,"Type") 
    @Html.Label("By Type")
    <br>
    @Html.RadioButtonFor(Model => Model.Type,"Name") 
    @Html.Label("By Name")
    <br>
    @Html.RadioButtonFor(Model => Model.Type,"Gender") 
    @Html.Label("By Gender")
    <br>
    @Html.RadioButtonFor(Model => Model.Type,"DateAdmittance") 
    @Html.Label("By Date (MM/DD/YYYY)")
    <br>
    @Html.RadioButtonFor(Model => Model.Type,"Breed") 
    @Html.Label("By Breed")  
    <br>

    <input type="submit" value="Find animal" class="btn btn-default" />
  }

<div class="links">
  <div class="link">
    <p>@Html.ActionLink("Add new animal", "Create")</p>
  </div>
  <div class="link">
    <p>@Html.ActionLink("List of Animals", "Index")</p>
  </div>
  <div class="link">
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
  </div>
</div>   